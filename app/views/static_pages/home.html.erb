<%= provide(:title, "Home") %>
<div class="intro-header">
  <div class="container">

    <div class="row">
      <div class="col-lg-12">
        <div class="intro-message">
          <h1>Private Events</h1>

          <h3>An app for scheduling and attending events</h3>
          <hr class="intro-divider">
          <ul class="list-inline intro-social-buttons">

            <% if !logged_in? %>
                <li>
                  <%= link_to signup_path, class: "btn btn-default btn-lg" do %>
                      <i class="fa fa-user fa-fw"></i>
                      <span class="network-name">Sign Up</span>
                  <% end %>
                </li>
            <% else %>
                <li>
                  <%= link_to "#", class: "btn btn-default btn-lg" do %>
                      <i class="glyphicon glyphicon-edit"></i>
                      <span class="network-name">Create Event</span>
                  <% end %>
                </li>

            <% end %>
          </ul>

        </div>
      </div>
    </div>
  </div>
</div>