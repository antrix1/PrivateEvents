  <div class="col-md-6 col-md-offset-3" style="margin-top:10px;">
    <% flash.each do |type, msg| %>
        <%= content_tag :div, class: "alert alert-#{type} alert-dismissable text-center" do %>
            <%= msg %>
            <button type="button" class="close" data-dismiss="alert"
                    aria-hidden="true">
              &times;
            </button>
        <% end %>
    <% end %>

  </div>
